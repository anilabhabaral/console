<view>
    <vertical-navigation id="logging-vertical-navigation">
        <!--
            Logging Configuration
        -->
        <item id="logging-config-item" title="Configuration" icon="pficon pficon-settings">
            <metadata address="/{selected.profile}/subsystem=logging">
                <h1>Configuration</h1>
                <p>${metadata.getDescription().getDescription()}</p>
                <form id="logging-config-form" title="Logging Configuration" auto-save="true" reset="true"/>
            </metadata>
        </item>


        <!--
            Root Logger
        -->
        <item id="logging-root-logger-item" title="Root Logger" icon="fa fa-sitemap">
            <metadata address="/{selected.profile}/subsystem=logging/root-logger=ROOT">
                <h1 id="logging-root-logger-header">Root Logger</h1>
                <p id="logging-root-logger-description">${metadata.getDescription().getDescription()}</p>
                <form id="logging-root-logger-form" title="Root Logger" auto-save="true" reset="true">
                    <attributes>
                        <attribute name="level"/>
                        <attribute name="handlers">
                            <suggest-handler>
                                <templates>
                                    <!-- @formatter:off -->
                                    <template address="/{selected.profile}/subsystem=logging/async-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/console-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/custom-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/file-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/periodic-rotating-file-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/periodic-size-rotating-file-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/size-rotating-file-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/socket-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/syslog-handler=*"/>
                                    <!-- @formatter:on -->
                                </templates>
                            </suggest-handler>
                        </attribute>
                        <attribute name="filter-spec"/>
                    </attributes>
                </form>
            </metadata>
        </item>


        <!--
            Categories / Logger
        -->
        <item id="logging-category-item" title="Categories" icon="pficon pficon-repository">
            <metadata address="/{selected.profile}/subsystem=logging/logger=*">
                <h1>Categories</h1>
                <p>${metadata.getDescription().getDescription()}</p>
                <table id="logging-category-table" title="Category" form-ref="logging-category-form">
                    <actions>
                        <action handler-ref="add-resource">
                            <attributes>
                                <attribute name="level"/>
                                <attribute name="handlers">
                                    <suggest-handler>
                                        <templates>
                                            <!-- @formatter:off -->
                                            <template address="/{selected.profile}/subsystem=logging/async-handler=*"/>
                                            <template address="/{selected.profile}/subsystem=logging/console-handler=*"/>
                                            <template address="/{selected.profile}/subsystem=logging/custom-handler=*"/>
                                            <template address="/{selected.profile}/subsystem=logging/file-handler=*"/>
                                            <template address="/{selected.profile}/subsystem=logging/periodic-rotating-file-handler=*"/>
                                            <template address="/{selected.profile}/subsystem=logging/periodic-size-rotating-file-handler=*"/>
                                            <template address="/{selected.profile}/subsystem=logging/size-rotating-file-handler=*"/>
                                            <template address="/{selected.profile}/subsystem=logging/socket-handler=*"/>
                                            <template address="/{selected.profile}/subsystem=logging/syslog-handler=*"/>
                                            <!-- @formatter:on -->
                                        </templates>
                                    </suggest-handler>
                                </attribute>
                                <attribute name="use-parent-handlers"/>
                            </attributes>
                        </action>
                        <action handler-ref="remove-resource" scope="selected"
                                name-resolver="${table.selectedRow().getName()}"/>
                    </actions>
                    <columns>
                        <column name="category"/>
                        <column name="level"/>
                    </columns>
                </table>
                <form id="logging-category-form" title="Category" auto-save="true" reset="true"
                      name-resolver="${form.getModel().getName()}">
                    <attributes>
                        <attribute name="category"/>
                        <attribute name="filter-spec"/>
                        <attribute name="handlers">
                            <suggest-handler>
                                <templates>
                                    <!-- @formatter:off -->
                                    <template address="/{selected.profile}/subsystem=logging/async-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/console-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/custom-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/file-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/periodic-rotating-file-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/periodic-size-rotating-file-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/size-rotating-file-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/socket-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/syslog-handler=*"/>
                                    <!-- @formatter:on -->
                                </templates>
                            </suggest-handler>
                        </attribute>
                        <attribute name="level"/>
                        <attribute name="use-parent-handlers"/>
                    </attributes>
                </form>
            </metadata>
        </item>


        <item id="logging-handler-item" title="Handler" icon="fa fa-cogs">
            <!--
                Async Handler
            -->
            <sub-item id="logging-handler-async-item" title="Async Handler">
                <metadata address="/{selected.profile}/subsystem=logging/async-handler=*">
                    <h1>Async Handler</h1>
                    <p>${metadata.getDescription().getDescription()}</p>
                    <table id="logging-handler-async-table" form-ref="logging-handler-async-form">
                        <actions>
                            <action handler-ref="add-resource">
                                <attributes>
                                    <attribute name="level"/>
                                    <attribute name="overflow-action"/>
                                    <attribute name="queue-length"/>
                                    <attribute name="subhandlers">
                                        <suggest-handler>
                                            <templates>
                                                <!-- @formatter:off -->
                                                <template address="/{selected.profile}/subsystem=logging/console-handler=*"/>
                                                <template address="/{selected.profile}/subsystem=logging/custom-handler=*"/>
                                                <template address="/{selected.profile}/subsystem=logging/file-handler=*"/>
                                                <template address="/{selected.profile}/subsystem=logging/periodic-rotating-file-handler=*"/>
                                                <template address="/{selected.profile}/subsystem=logging/periodic-size-rotating-file-handler=*"/>
                                                <template address="/{selected.profile}/subsystem=logging/size-rotating-file-handler=*"/>
                                                <template address="/{selected.profile}/subsystem=logging/socket-handler=*"/>
                                                <template address="/{selected.profile}/subsystem=logging/syslog-handler=*"/>
                                                <!-- @formatter:on -->
                                            </templates>
                                        </suggest-handler>
                                    </attribute>
                                </attributes>
                            </action>
                            <action handler-ref="remove-resource" scope="selected"
                                    name-resolver="${table.selectedRow().getName()}"/>
                        </actions>
                        <columns>
                            <column name="name"/>
                            <column name="level"/>
                        </columns>
                    </table>
                    <form id="logging-handler-async-form" auto-save="true" reset="true"
                          name-resolver="${form.getModel().getName()}">
                        <attributes>
                            <attribute name="filter-spec"/>
                            <attribute name="level"/>
                            <attribute name="overflow-action"/>
                            <attribute name="queue-length"/>
                            <attribute name="subhandlers">
                                <suggest-handler>
                                    <templates>
                                        <!-- @formatter:off -->
                                        <template address="/{selected.profile}/subsystem=logging/console-handler=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/custom-handler=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/file-handler=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/periodic-rotating-file-handler=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/periodic-size-rotating-file-handler=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/size-rotating-file-handler=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/socket-handler=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/syslog-handler=*"/>
                                        <!-- @formatter:on -->
                                    </templates>
                                </suggest-handler>
                            </attribute>
                        </attributes>
                    </form>
                </metadata>
            </sub-item>

            <!--
                Console Handler
            -->
            <sub-item id="logging-handler-console-item" title="Console Handler">
                <metadata address="/{selected.profile}/subsystem=logging/console-handler=*">
                    <h1>Console Handler</h1>
                    <p>${metadata.getDescription().getDescription()}</p>
                    <table id="logging-handler-console-table" form-ref="logging-handler-console-form">
                        <actions>
                            <action handler-ref="add-resource">
                                <attributes>
                                    <attribute name="level"/>
                                    <attribute name="formatter"/>
                                    <attribute name="target"/>
                                </attributes>
                            </action>
                            <action handler-ref="remove-resource" scope="selected"
                                    name-resolver="${table.selectedRow().getName()}"/>
                        </actions>
                        <columns>
                            <column name="name"/>
                            <column name="level"/>
                            <column name="target"/>
                        </columns>
                    </table>
                    <form id="logging-handler-console-form" auto-save="true" reset="true"
                          name-resolver="${form.getModel().getName()}">
                        <attributes>
                            <attribute name="autoflush"/>
                            <attribute name="enabled"/>
                            <attribute name="encoding"/>
                            <attribute name="filter-spec"/>
                            <attribute name="formatter"/>
                            <attribute name="level"/>
                            <attribute name="named-formatter">
                                <suggest-handler>
                                    <templates>
                                        <template address="/{selected.profile}/subsystem=logging/pattern-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/custom-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/json-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/xml-formatter=*"/>
                                    </templates>
                                </suggest-handler>
                            </attribute>
                            <attribute name="target"/>
                        </attributes>
                    </form>
                </metadata>
            </sub-item>

            <!--
                Custom Handler
            -->
            <sub-item id="logging-handler-custom-item" title="Custom Handler">
                <metadata address="/{selected.profile}/subsystem=logging/custom-handler=*">
                    <h1>Custom Handler</h1>
                    <p>${metadata.getDescription().getDescription()}</p>
                    <table id="logging-handler-custom-table" form-ref="logging-handler-custom-form">
                        <actions>
                            <action handler-ref="add-resource">
                                <attributes>
                                    <attribute name="class"/>
                                    <attribute name="formatter"/>
                                    <attribute name="level"/>
                                    <attribute name="module"/>
                                </attributes>
                            </action>
                            <action handler-ref="remove-resource" scope="selected"
                                    name-resolver="${table.selectedRow().getName()}"/>
                        </actions>
                        <columns>
                            <column name="name"/>
                            <column name="level"/>
                        </columns>
                    </table>
                    <form id="logging-handler-custom-form" auto-save="true" reset="true"
                          name-resolver="${form.getModel().getName()}">
                        <attributes>
                            <attribute name="class"/>
                            <attribute name="enabled"/>
                            <attribute name="encoding"/>
                            <attribute name="filter-spec"/>
                            <attribute name="formatter"/>
                            <attribute name="level"/>
                            <attribute name="module"/>
                            <attribute name="named-formatter">
                                <suggest-handler>
                                    <templates>
                                        <template address="/{selected.profile}/subsystem=logging/pattern-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/custom-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/json-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/xml-formatter=*"/>
                                    </templates>
                                </suggest-handler>
                            </attribute>
                            <attribute name="properties"/>
                        </attributes>
                    </form>
                </metadata>
            </sub-item>

            <!--
                File Handler
            -->
            <sub-item id="logging-handler-file-item" title="File Handler">
                <metadata address="/{selected.profile}/subsystem=logging/file-handler=*">
                    <h1>File Handler</h1>
                    <p>${metadata.getDescription().getDescription()}</p>
                    <table id="logging-handler-file-table" form-ref="logging-handler-file-form">
                        <actions>
                            <action handler-ref="add-resource">
                                <attributes>
                                    <attribute name="file"
                                               provider='${new org.jboss.hal.core.ui.FileFormItem("file", true)}'/>
                                    <attribute name="formatter"/>
                                    <attribute name="level"/>
                                </attributes>
                            </action>
                            <action handler-ref="remove-resource" scope="selected"
                                    name-resolver="${table.selectedRow().getName()}"/>
                        </actions>
                        <columns>
                            <column name="name"/>
                            <column name="level"/>
                            <column name="file" value="${Logging.getFilename(row)}"/>
                        </columns>
                    </table>
                    <form id="logging-handler-file-form" auto-save="true" reset="true"
                          name-resolver="${form.getModel().getName()}">
                        <attributes>
                            <attribute name="append"/>
                            <attribute name="autoflush"/>
                            <attribute name="enabled"/>
                            <attribute name="encoding"/>
                            <attribute name="file"
                                       provider='${new org.jboss.hal.core.ui.FileFormItem("file", true)}'/>
                            <attribute name="filter-spec"/>
                            <attribute name="formatter"/>
                            <attribute name="level"/>
                            <attribute name="named-formatter">
                                <suggest-handler>
                                    <templates>
                                        <template address="/{selected.profile}/subsystem=logging/pattern-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/custom-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/json-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/xml-formatter=*"/>
                                    </templates>
                                </suggest-handler>
                            </attribute>
                        </attributes>
                    </form>
                </metadata>
            </sub-item>


            <!--
                Periodic Rotating Handler
            -->
            <sub-item id="logging-handler-periodic-rotating-file-item" title="Periodic Handler">
                <metadata address="/{selected.profile}/subsystem=logging/periodic-rotating-file-handler=*">
                    <h1>Periodic Handler</h1>
                    <p>${metadata.getDescription().getDescription()}</p>
                    <table id="logging-handler-periodic-rotating-file-table"
                           form-ref="logging-handler-periodic-rotating-file-form">
                        <actions>
                            <action handler-ref="add-resource">
                                <attributes>
                                    <attribute name="file"
                                               provider='${new org.jboss.hal.core.ui.FileFormItem("file", true)}'/>
                                    <attribute name="formatter"/>
                                    <attribute name="level"/>
                                    <attribute name="suffix"/>
                                </attributes>
                            </action>
                            <action handler-ref="remove-resource" scope="selected"
                                    name-resolver="${table.selectedRow().getName()}"/>
                        </actions>
                        <columns>
                            <column name="name"/>
                            <column name="level"/>
                            <column name="file" value="${Logging.getFilename(row)}"/>
                        </columns>
                    </table>
                    <form id="logging-handler-periodic-rotating-file-form" auto-save="true" reset="true"
                          name-resolver="${form.getModel().getName()}">
                        <attributes>
                            <attribute name="append"/>
                            <attribute name="autoflush"/>
                            <attribute name="enabled"/>
                            <attribute name="encoding"/>
                            <attribute name="file"
                                       provider='${new org.jboss.hal.core.ui.FileFormItem("file", true)}'/>
                            <attribute name="filter-spec"/>
                            <attribute name="formatter"/>
                            <attribute name="level"/>
                            <attribute name="named-formatter">
                                <suggest-handler>
                                    <templates>
                                        <template address="/{selected.profile}/subsystem=logging/pattern-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/custom-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/json-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/xml-formatter=*"/>
                                    </templates>
                                </suggest-handler>
                            </attribute>
                            <attribute name="suffix"/>
                        </attributes>
                    </form>
                </metadata>
            </sub-item>


            <!--
                Periodic Size Rotating Handler
            -->
            <sub-item id="logging-handler-periodic-size-rotating-file-item" title="Periodic Size Handler">
                <metadata address="/{selected.profile}/subsystem=logging/periodic-size-rotating-file-handler=*">
                    <h1>Periodic Size Handler</h1>
                    <p>${metadata.getDescription().getDescription()}</p>
                    <table id="logging-handler-periodic-size-rotating-file-table"
                           form-ref="logging-handler-periodic-size-rotating-file-form">
                        <actions>
                            <action handler-ref="add-resource">
                                <attributes>
                                    <attribute name="file"
                                               provider='${new org.jboss.hal.core.ui.FileFormItem("file", true)}'/>
                                    <attribute name="formatter"/>
                                    <attribute name="level"/>
                                    <attribute name="max-backup-index"/>
                                    <attribute name="rotate-size"/>
                                    <attribute name="suffix"/>
                                </attributes>
                            </action>
                            <action handler-ref="remove-resource" scope="selected"
                                    name-resolver="${table.selectedRow().getName()}"/>
                        </actions>
                        <columns>
                            <column name="name"/>
                            <column name="level"/>
                            <column name="file" value="${Logging.getFilename(row)}"/>
                        </columns>
                    </table>
                    <form id="logging-handler-periodic-size-rotating-file-form" auto-save="true" reset="true"
                          name-resolver="${form.getModel().getName()}">
                        <attributes>
                            <attribute name="append"/>
                            <attribute name="autoflush"/>
                            <attribute name="enabled"/>
                            <attribute name="encoding"/>
                            <attribute name="file"
                                       provider='${new org.jboss.hal.core.ui.FileFormItem("file", true)}'/>
                            <attribute name="filter-spec"/>
                            <attribute name="formatter"/>
                            <attribute name="level"/>
                            <attribute name="max-backup-index"/>
                            <attribute name="named-formatter">
                                <suggest-handler>
                                    <templates>
                                        <template address="/{selected.profile}/subsystem=logging/pattern-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/custom-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/json-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/xml-formatter=*"/>
                                    </templates>
                                </suggest-handler>
                            </attribute>
                            <attribute name="rotate-size"/>
                            <attribute name="rotate-on-boot"/>
                            <attribute name="suffix"/>
                        </attributes>
                    </form>
                </metadata>
            </sub-item>


            <!--
                Size Rotating Handler
            -->
            <sub-item id="logging-handler-size-rotating-file-item" title="Size Handler">
                <metadata address="/{selected.profile}/subsystem=logging/size-rotating-file-handler=*">
                    <h1>Size Handler</h1>
                    <p>${metadata.getDescription().getDescription()}</p>
                    <table id="logging-handler-size-rotating-file-table"
                           form-ref="logging-handler-size-rotating-file-form">
                        <actions>
                            <action handler-ref="add-resource">
                                <attributes>
                                    <attribute name="file"
                                               provider='${new org.jboss.hal.core.ui.FileFormItem("file", true)}'/>
                                    <attribute name="formatter"/>
                                    <attribute name="level"/>
                                    <attribute name="max-backup-index"/>
                                    <attribute name="rotate-size"/>
                                    <attribute name="suffix"/>
                                </attributes>
                            </action>
                            <action handler-ref="remove-resource" scope="selected"
                                    name-resolver="${table.selectedRow().getName()}"/>
                        </actions>
                        <columns>
                            <column name="name"/>
                            <column name="level"/>
                            <column name="file" value="${Logging.getFilename(row)}"/>
                        </columns>
                    </table>
                    <form id="logging-handler-size-rotating-file-form" auto-save="true" reset="true"
                          name-resolver="${form.getModel().getName()}">
                        <attributes>
                            <attribute name="append"/>
                            <attribute name="autoflush"/>
                            <attribute name="enabled"/>
                            <attribute name="encoding"/>
                            <attribute name="file"
                                       provider='${new org.jboss.hal.core.ui.FileFormItem("file", true)}'/>
                            <attribute name="filter-spec"/>
                            <attribute name="formatter"/>
                            <attribute name="level"/>
                            <attribute name="max-backup-index"/>
                            <attribute name="named-formatter">
                                <suggest-handler>
                                    <templates>
                                        <template address="/{selected.profile}/subsystem=logging/pattern-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/custom-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/json-formatter=*"/>
