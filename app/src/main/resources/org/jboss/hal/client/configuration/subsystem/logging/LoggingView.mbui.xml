            <!--
                Socket Handler
            -->
            <sub-item id="logging-handler-socket-item" title="Socket Handler">
                <metadata address="/{selected.profile}/subsystem=logging/socket-handler=*">
                    <h1>Socket Handler</h1>
                    <p>${metadata.getDescription().getDescription()}</p>
                    <table id="logging-handler-socket-table" form-ref="logging-handler-socket-form">
                        <actions>
                            <action handler-ref="add-resource">
                                <attributes>
                                    <attribute name="named-formatter">
                                        <suggest-handler>
                                            <templates>
                                                <template
                                                        address="/{selected.profile}/subsystem=logging/pattern-formatter=*"/>
                                                <template
                                                        address="/{selected.profile}/subsystem=logging/custom-formatter=*"/>
                                                <template
                                                        address="/{selected.profile}/subsystem=logging/json-formatter=*"/>
                                                <template
                                                        address="/{selected.profile}/subsystem=logging/xml-formatter=*"/>
                                            </templates>
                                        </suggest-handler>
                                    </attribute>
                                    <attribute name="outbound-socket-binding-ref"/>
                                </attributes>
                            </action>
                            <action handler-ref="remove-resource" scope="selected"
                                    name-resolver="${table.selectedRow().getName()}"/>
                        </actions>
                        <columns>
                            <!-- socket handlers do not have a name attribute,
                            so we need to provide a value using NamedNode.getName() -->
                            <column name="name" value="${row.getName()}"/>
                            <column name="level"/>
                        </columns>
                    </table>
                    <form id="logging-handler-socket-form" auto-save="true" reset="true"
                          name-resolver="${form.getModel().getName()}">
                        <attributes>
                            <attribute name="autoflush"/>
                            <attribute name="block-on-reconnect"/>
                            <attribute name="enabled"/>
                            <attribute name="encoding"/>
                            <attribute name="filter-spec"/>
                            <attribute name="level"/>
                            <attribute name="named-formatter">
                                <suggest-handler>
                                    <templates>
                                        <template address="/{selected.profile}/subsystem=logging/pattern-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/custom-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/json-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/xml-formatter=*"/>
                                    </templates>
                                </suggest-handler>
                            </attribute>
                            <attribute name="outbound-socket-binding-ref"/>
                            <attribute name="protocol"/>
                            <attribute name="ssl-context"/>
                        </attributes>
                    </form>
                </metadata>
            </sub-item>

            <!--
                Syslog Handler
            -->
            <sub-item id="logging-handler-syslog-item" title="Syslog Handler">
                <metadata address="/{selected.profile}/subsystem=logging/syslog-handler=*">
                    <h1>Syslog Handler</h1>
                    <p>${metadata.getDescription().getDescription()}</p>
                    <table id="logging-handler-syslog-table" form-ref="logging-handler-syslog-form">
                        <actions>
                            <action handler-ref="add-resource">
                                <attributes>
                                    <attribute name="app-name"/>
                                    <attribute name="facility"/>
                                    <attribute name="hostname"/>
                                    <attribute name="level"/>
                                    <attribute name="named-formatter">
                                        <suggest-handler>
                                            <templates>
                                                <template
                                                        address="/{selected.profile}/subsystem=logging/pattern-formatter=*"/>
                                                <template
                                                        address="/{selected.profile}/subsystem=logging/custom-formatter=*"/>
                                                <template
                                                        address="/{selected.profile}/subsystem=logging/json-formatter=*"/>
                                                <template
                                                        address="/{selected.profile}/subsystem=logging/xml-formatter=*"/>
                                            </templates>
                                        </suggest-handler>
                                    </attribute>
                                    <attribute name="port"/>
                                    <attribute name="server-address"/>
                                    <attribute name="syslog-format"/>
                                </attributes>
                            </action>
                            <action handler-ref="remove-resource" scope="selected"
                                    name-resolver="${table.selectedRow().getName()}"/>
                        </actions>
                        <columns>
                            <!-- syslog handlers do not have a name attribute,
                            so we need to provide a value using NamedNode.getName() -->
                            <column name="name" value="${row.getName()}"/>
                            <column name="level"/>
                        </columns>
                    </table>
                    <form id="logging-handler-syslog-form" auto-save="true" reset="true"
                          name-resolver="${form.getModel().getName()}">
                        <attributes>
                            <attribute name="app-name"/>
                            <attribute name="enabled"/>
                            <attribute name="facility"/>
                            <attribute name="hostname"/>
                            <attribute name="level"/>
                            <attribute name="named-formatter">
                                <suggest-handler>
                                    <templates>
                                        <template address="/{selected.profile}/subsystem=logging/pattern-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/custom-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/json-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/xml-formatter=*"/>
                                    </templates>
                                </suggest-handler>
                            </attribute>
                            <attribute name="port"/>
                            <attribute name="server-address"/>
                            <attribute name="syslog-format"/>
                        </attributes>
                    </form>
                </metadata>
            </sub-item>
        </item>


        <item id="logging-formatter-item" title="Formatter" icon="fa fa-paint-brush">
            <!--
                Custom Formatter
            -->
            <sub-item id="logging-formatter-custom-item" title="Custom Formatter">
                <metadata address="/{selected.profile}/subsystem=logging/custom-formatter=*">
                    <h1>Custom Formatter</h1>
                    <p>${metadata.getDescription().getDescription()}</p>
                    <table id="logging-formatter-custom-table" form-ref="logging-formatter-custom-form">
                        <actions>
                            <action handler-ref="add-resource"/>
                            <action handler-ref="remove-resource" scope="selected"
                                    name-resolver="${table.selectedRow().getName()}"/>
                        </actions>
                        <columns>
                            <!-- custom formatter do not have a name attribute,
                            so we need to provide a value using NamedNode.getName() -->
                            <column name="name" value="${row.getName()}"/>
                        </columns>
                    </table>
                    <form id="logging-formatter-custom-form" auto-save="true" reset="true"
                          name-resolver="${form.getModel().getName()}">
                        <attributes>
                            <attribute name="class"/>
                            <attribute name="module"/>
                            <attribute name="properties"/>
                        </attributes>
                    </form>
                </metadata>
            </sub-item>

            <!--
                Pattern Formatter
            -->
            <sub-item id="logging-formatter-pattern-item" title="Pattern Formatter">
                <metadata address="/{selected.profile}/subsystem=logging/pattern-formatter=*">
                    <h1>Pattern Formatter</h1>
                    <p>${metadata.getDescription().getDescription()}</p>
                    <table id="logging-formatter-pattern-table" form-ref="logging-formatter-pattern-form">
                        <actions>
                            <action handler-ref="add-resource"/>
