                                    name-resolver="${table.selectedRow().getName()}"/>
                        </actions>
                        <columns>
                            <!-- log formatter resources do not have a name attribute,
                            so we need to provide a value which calls NamedNode.getName() -->
                            <column name="name" value="${row.getName()}"/>
                            <column name="pattern"/>
                        </columns>
                    </table>
                    <form id="logging-formatter-pattern-form" auto-save="true" reset="true"
                          name-resolver="${form.getModel().getName()}">
                        <attributes>
                            <attribute name="color-map"/>
                            <attribute name="pattern"/>
                        </attributes>
                    </form>
                </metadata>
            </sub-item>

        </item>
    </vertical-navigation>
